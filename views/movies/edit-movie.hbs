<a href="/">Home</a>

<h2>Edit Movie</h2>
<form action="/movies/{{movie._id}}" method="post">
  <label>Title:</label>
  <input type="text" name="title" value="{{movie.title}}" />
  <label>Genre:</label>
  <input type="text" name="genre" value="{{movie.genre}}" />
  <label>Plot:</label>
  <input type="text" name="plot" value="{{movie.plot}}" />
  <label>Cast:</label>
  <select name="cast" multiple>
    {{#each celebrities}}
      <option value="{{_id}}">{{name}}</option>
    {{/each}}
  </select>
  <button type="submit">Edit Movie</button>
</form>